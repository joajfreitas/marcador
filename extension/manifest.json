{
  "manifest_version": 2,
  "name": "Marcador",
  "version": "0.1",

  "description": "Firefox integration for marcador webserver.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "activeTab",
	"tabs"
  ],

  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "Marcador",
    "default_popup": "popup/marcador.html"
  },

  "web_accessible_resources": [
    "beasts/frog.jpg",
    "beasts/turtle.jpg",
    "beasts/snake.jpg"
  ]

}
